
<%= simple_form_for(@shot) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


     
      <% unless @shot.user_shot.blank? %>
      <%= image_tag (@shot.user_shot_url), id:"previewImage"%>
      <%end%>

    <output class="drag-area has-text-centered">
  
        Drag what's in your mind

   
    </output>


      <%= f.input :user_shot , label: false, input_html: {class: "file-input drop-zone__input", type: "file" }, wrapper: false , label_html: {class: "file-label"}%>

      
  <div class="field  mt-5 is-grouped is-grouped-centered">
    
      <div class="control width-50">
        <%= f.input :title, input_html: {class: "input"} , wrapper: false ,label_html: {class: "label"} %>
      </div>
    </div>
  <div class="field is-grouped is-grouped-centered ">
    
    <div class="control width-50">
      <%= f.input :description, input_html: {class: "textarea"} , wrapper: false ,label_html: {class: "label"} %>
    </div>
</div>



  <div class="control has-text-centered">
 
   <%= f.button :submit,class: "button is-custom-pink"  %>
</div>
<% end %>
